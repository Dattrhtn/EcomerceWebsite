@model IEnumerable<EcomerceWebsite.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2 style="font-weight: 700; margin-bottom: 20px;">Quản lý đơn hàng</h2>

<style>
    .excelLink {
        padding: 0 5px;
        transition: 0.3s;
        border-radius: 5px;
        font-weight: 600;
        display: block;
    }

        .excelLink:hover {
            background-color: lightgreen;
            color: white !important;
            font-size: 18px;
            height: 30px;
        }

    a:hover {
        color: purple !important;
    }
</style>

<link rel="stylesheet" href="../../css/style.css" type="text/css">
<div style="display:flex;">

    <div>

        <a class="excelLink" href="@Url.Action("ExportToExcel", "Home", new { code = "Order" })" style="color: #21b61f; text-decoration:none; margin-left: 20px; margin-bottom:10px;">Xuất file excel <i class="fa fa-file-excel" style="margin-left: 5px;"></i></a>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.account.first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment.payment_method)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shipment.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngayTao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.account.first_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment.payment_method)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shipment.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngayTao)
            </td>
            <td>
                @Html.ActionLink("Chi tiết", "Edit", new { id = item.order_id })
                @*@Html.ActionLink("Details", "Details", new { id=item.order_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.order_id })*@
            </td>
        </tr>
    }

</table>
<div class="product__pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a class="@(ViewBag.CurrentPage == i ? "active" : "")" href="/Admin_Orders/Index/?page=@i">@i</a>
    }
</div>
