@model EcomerceWebsite.Models.Order

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Edit</h2>
<style>
    .product_color {
        text-align: center;
    }

        .product_color label {
            height: 30px;
            width: 30px;
            border-radius: 50%;
            position: relative;
            margin-right: 10px;
            margin-bottom: 0;
            display: inline-block;
            cursor: pointer;
            padding: 10px;
            border: 1px solid #e5dcdc;
        }

    label input {
        display: none;
    }
    td label.c-3 {
        background: #e8bac4;
    }

    td label.c-2 {
        background: #ffff;
    }

    td label.c-4 {
        background: red;
    }

    td label.c-1 {
        background: #0b090c;
    }

    td label.c-6 {
        background: #e5ddd2;
    }

    td label.c-5 {
        background: #6c827a;
    }

    td label.c-7 {
        background: #636068;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Order</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.order_id)

    <div class="form-group">
        @Html.LabelFor(model => model.total_price, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.total_price, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.total_price, "", new { @class = "text-danger", @disabled = "disabled" })
            @Html.HiddenFor(model => model.total_price)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.account_account_id, "account_account_id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("account_account_id", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.account_account_id, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.account_account_id)
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Payment_payment_id, "Payment_payment_id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Payment_payment_id", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.Payment_payment_id, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Payment_payment_id)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Shipment_shipment_id, "Shipment_shipment_id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Shipment_shipment_id", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.Shipment_shipment_id, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Thông tin giao hàng", "Edit", "Admin_Shipments", new { id = Model.Shipment_shipment_id }, null)
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Address:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("address", null, new { @class = "form-control", @value = ViewBag.shipmentItemAddress, @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("ZipCode:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("zipCode", null, new { @class = "form-control", @value = ViewBag.zipCode, @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Trạng thái:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("state", null, new { @class = "form-control", @value = ViewBag.state, @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Ship Date:", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("shipDate", null, new { @class = "form-control", @value = ViewBag.shipDate, @readonly = "readonly" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.Label("Ship Date:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ShippingStatus", new List<SelectListItem>
                 {
                     new SelectListItem { Text = "Chờ xác nhận", Value = "Chờ xác nhận" },
                     new SelectListItem { Text = "Đang giao hàng", Value = "Đang giao hàng" },
                     new SelectListItem { Text = "Giao hàng thành công", Value = "Giao hàng thành công" },
                     new SelectListItem { Text = "Đã hủy", Value = "Đã hủy" }
                 }, new { @class = "form-control" })
            </div>
        </div>*@

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Màu sắc</th>
                <th>Kích cỡ</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.order_item)
            {
                <tr>
                    <td>@item.Product.name</td>
                    <td class="product_color" style="width: 100px">
                        <label class="c-@item.Product.color" for="sp-@item.Product.color">
                           <input type="radio" id="sp-@item.Product.color" name="color" value="@item.Product.color">
                        </label>
                    </td>
                    <td>@item.Product.size</td>
                    <td>@item.quantity</td>
                    <td>@String.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}", item.price)</td>
                    <td>@String.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}", item.quantity * item.price)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
