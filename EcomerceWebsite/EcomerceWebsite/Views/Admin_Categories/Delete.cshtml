@model EcomerceWebsite.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h3 style="font-weight:700">Xóa danh mục</h3>

<h4 style="color: red;">Bạn có chắc muốn xóa danh mục này?</h4>
<div>
    <hr />
    @if (ViewBag.erDeleteCate != null)
    {
        <div style="padding: 10px 20px; border-radius:10px; background-color: darkred; color: white; font-weight:700;">
            @ViewBag.erDeleteCate
        </div>
    }
    <dl class="dl-horizontal">
        <dt>
            Tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xác nhận" class="btn btn-default" /> |
            @Html.ActionLink("Trở lại", "Index")
        </div>
    }


</div>

