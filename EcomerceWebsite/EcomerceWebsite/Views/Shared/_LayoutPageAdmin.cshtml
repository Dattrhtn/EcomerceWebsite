<script>

    document.addEventListener('DOMContentLoaded', function () {
        var divs = document.querySelectorAll('.navclick');

        // Kiểm tra và đặt lớp 'active' từ localStorage
        var activeDivId = localStorage.getItem('activeDiv');
        if (activeDivId) {
            var activeDiv = document.querySelector('.navclick[data-id="' + activeDivId + '"]');
            if (activeDiv) {
                activeDiv.classList.add('active');
            }
        }

        divs.forEach(function (div) {
            div.addEventListener('click', function () {
                // Loại bỏ lớp 'active' từ tất cả các thẻ div
                divs.forEach(function (d) {
                    d.classList.remove('active');
                });

                // Thêm lớp 'active' vào thẻ div được bấm
                this.classList.add('active');

                // Lưu trữ trạng thái vào localStorage
                localStorage.setItem('activeDiv', this.getAttribute('data-id'));
            });
        });
    });
</script>

