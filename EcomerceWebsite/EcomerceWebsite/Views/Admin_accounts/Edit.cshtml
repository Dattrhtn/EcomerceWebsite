                    Người dùng
                </label>

            </div>
            <div class="col-md-3">
                @Html.RadioButtonFor(model => model.role, "1", new { id = "sp-2 ", @class = "hidden-radio", style = "width: 20px; height: 20px; margin-left: 15px;" })
