
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Custom CSS for styling */
    body.custom-body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .custom-container {
        margin-top: 50px;
    }

    .custom-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

    .custom-card-header {
        background-color: #343a40;
        color: #fff;
        border-radius: 10px 10px 0 0;
    }

    .custom-list-group-item {
        border: none;
    }

        .custom-list-group-item span {
            color: #6c757d;
        }

    h2.custom-header {
        color: #fff;
    }

    .custom-btn {
        margin-top: 15px;
    }
</style>
<body class="custom-body">

    <div class="container custom-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card custom-card">
                    <div class="card-header custom-card-header text-center">
                        <h2 class="custom-header">Thông tin cá nhân</h2>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item custom-list-group-item"><strong>Họ:</strong> <span>@Model.last_name</span></li>
                            <li class="list-group-item custom-list-group-item"><strong>Tên:</strong> <span>@Model.first_name</span></li>
                            <li class="list-group-item custom-list-group-item"><strong>Email:</strong> <span>@Model.email</span></li>
                            <li class="list-group-item custom-list-group-item"><strong>Địa chỉ:</strong> <span>@Model.address</span></li>
                            <li class="list-group-item custom-list-group-item"><strong>Số điện thoại:</strong> <span>@Model.phone_number</span></li>
                            <li class="list-group-item custom-list-group-item"><strong>Ngày tạo:</strong> <span>@Model.ngayTao.ToString("yyyy-MM-dd")</span></li>
                        </ul>
                        <div class="text-center custom-btn">
                            <a href="/Client_DanhsachOrders/Index" class="btn btn-primary">Các đơn hàng đã mua</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
